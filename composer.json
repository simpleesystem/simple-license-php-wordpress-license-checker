{
  "name": "simple-license/license-checker",
  "description": "Minimal WordPress SDK for license validation and activation only - lightweight integration for checking license validity, expiry, and entitlements",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Simple License System",
      "email": "support@simplelicensesystem.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "infection/infection": "^0.31",
    "php-stubs/wordpress-stubs": "^6.9",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "SimpleLicense\\LicenseChecker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleLicense\\LicenseChecker\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
